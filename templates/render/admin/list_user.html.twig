{% extends 'component/view/base.html.twig' %}

{% block css %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset("build/admin/list_user.js") }}"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col title">
            Users
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover" id="user-table">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in userList %}
                    <tr id="{{ user.id }}">
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block modal %}
{% endblock %}
