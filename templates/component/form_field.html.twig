{% extends "bootstrap_4_layout.html.twig" %}

{% block composite_collection_widget %}
    {% spaceless %}
    <div class="row" id="{{ form.vars.id }}">
        <div class="col collection-container">
            <div class="row mb-3 collection-prototype" style="display: none;">
                <div class="col">
                    {{ form_widget(prototype) }}
                </div>
                <div class="col-auto">
                    <div class="col-auto">
                        <i class="material-icons text-danger btn-like">clear</i>
                    </div>
                </div>
            </div>
            {% for child in form %}
                <div class="row mb-3" id="{{ child.vars.id }}">
                    <div class="col">
                        {{ form_widget(child) }}
                    </div>
                    <div class="col-auto">
                        <div class="col-auto">
                            <i class="material-icons text-danger btn-like" data-collection-delete="#{{ child.vars.id }}">clear</i>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <i data-collection-add="#{{ form.vars.id }}" class="material-icons text-primary btn-like">add</i>
        </div>
    </div>
    {% endspaceless %}
{% endblock %}
