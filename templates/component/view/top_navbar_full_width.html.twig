<div class="container-fluid">
    <div class="row">
        <div class="col ml-5" id="title">
            {{ template_helper.title }}
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="col-auto rhs btn-like mr-5" data-submenu="#profile-menu">
                <i class="material-icons p-2" data-submenu="#profile-menu">account_circle</i>
                <span class="px-2">{{ app.user.fullName }}</span>
            </div>
        {% else %}
            <a href="{{ path("login") }}" class="col-auto rhs btn-like mr-5">
                <i class="material-icons p-2" data-submenu="#profile-menu">account_circle</i>
                Welcome, Guest!
            </a>
        {% endif %}
    </div>
</div>