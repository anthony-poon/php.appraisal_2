<div class="col-md-2 pl-4 pt-2 collapse fixed-top bg-white" id="side-menu">
    <div class="row py-3">
        <div class="col">
            <i class="material-icons btn-like text-primary" data-toggle="collapse" data-target="#side-menu">
                clear
            </i>
        </div>
    </div>
    {% for item in template_helper.getSideMenu %}
        {% if item.isVisible is not defined or (item.isVisible is defined and item.isVisible) %}
            <div class="row">
                <div class="col {{ item.indent is defined and item.indent ? "ml-3" : "" }}">
                    {% if item.url is defined %}
                        <a href="{{ item.url }}" class="menu-item btn-like py-2 pl-3">
                            {% if item.icon is defined %}
                                <i class="material-icons mr-3">{{ item.icon }}</i>
                            {% else %}
                                <i class="material-icons mr-3 invisible">home</i>
                            {% endif %}
                            <span class="text-wrapper"><small>{{ item.text }}</small></span>
                        </a>
                    {% else %}
                        <div class="menu-item btn-like py-2 px-3">
                            {% if item.icon is defined %}
                                <i class="material-icons mr-3">{{ item.icon }}</i>
                            {% else %}
                                <i class="material-icons mr-3 invisible">home</i>
                            {% endif %}
                            <span class="text-wrapper"><small>{{ item.text }}</small></span>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>