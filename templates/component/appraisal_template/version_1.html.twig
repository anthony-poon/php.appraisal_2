                                        <div class="border-bottom mb-2 pb-2">
                                            Assessment by Appraising Officer
                                        </div>
                                        <div class="form-group">
                                            <label>Score</label>
                                            <input type="number" class="form-control form-control-sm" min="1" max="5" name="appraisal[part_b2][q_1][appraiser_score]"/>
                                        </div>

