                                        <div class="border-bottom mb-2 pb-2">
                                            Assessment by Appraising Officer
                                        </div>
                                        <div class="form-group">
                                            <label>Score</label>
                                            <input type="number" class="form-control form-control-sm" min="1" max="5" name="appraisal[part_b2][q_2][appraiser_score]"/>
                                        </div>

                                        <div class="d-flex h-100 flex-column">
                                            <label>Example</label>
                                            <textarea class="form-control flex-grow-1" name="appraisal[part_b2][q_2][appraiser_example]"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-7 form-group">
                <label>Overall Comments</label>
                <textarea class="form-control" name="appraisal[part_b2_overall_comment]"></textarea>
            </div>
            <div class="col-3 offset-2 form-group">
                <label>Part B2 Subtotal</label>
                <input type="number" mix="1" max="5" class="form-control" name="appraisal[part_b2_overall_score]"/>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-8 offset-2">
                <div class="border-bottom pb-2 mb-2">
                    Scoring from Countersigning Officer
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>
                                <small>Name</small>
                            </label>
                            <input readonly type="text" class="form-control-plaintext form-control-sm" name="appraisal[countersigner_1_name]">
                        </div>
                        <div class="form-group">
                            <label>
                                <small>Score</small>
                            </label>
                            <input type="number" class="form-control form-control-sm" name="appraisal[countersigner_1_part_b_score]"/>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>
                                <small>Name</small>
                            </label>
                            <input readonly type="text" class="form-control-plaintext form-control-sm" name="appraisal[countersigner_2_name]">
                        </div>
                        <div class="form-group">
                            <label>
                                <small>Score</small>
                            </label>
                            <input type="number" class="form-control form-control-sm" name="appraisal[countersigner_2_part_b_score]"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-3 offset-9 form-group">
                <label>
                    Part B Total
                </label>
                <input class="form-control form-control-sm text-right" type="number" name="appraisal[part_b_total]"/>
            </div>
        </div>
    </div>

